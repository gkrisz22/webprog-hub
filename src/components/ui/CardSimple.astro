---
import IconComponent from './Icon';

interface Props {
  href?: string;
  title: string;
  description: string;
  iconName?: 'clock' | 'filecheck' | 'bookopen' | 'calendar' | 'messagecircle';
}

const { href, title, description, iconName } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag 
  href={href}
  class={`block border border-zinc-800 p-4 sm:p-6 ${href ? 'hover:border-zinc-700 active:border-zinc-600 transition-colors' : ''}`}
>
  <div class="flex items-start gap-3">
    {iconName && (
      <div class="shrink-0 text-zinc-400 mt-0.5">
        <IconComponent name={iconName} client:load />
      </div>
    )}
    <div class="flex-1 min-w-0">
      <h3 class="text-base sm:text-lg font-medium text-zinc-50 mb-1 sm:mb-2">{title}</h3>
      <p class="text-sm text-zinc-400">{description}</p>
    </div>
  </div>
</Tag>
